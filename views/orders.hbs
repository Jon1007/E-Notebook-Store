<h3>My Orders</h3>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Order Id : <small>{{_id}}</small></span>
                        <p class="data">{{date}}</p>
                        <p>Name : &nbsp;&nbsp;&nbsp;   <i>{{user.userId.name}}</i></p>
                        <p>Gmail : &nbsp;&nbsp;&nbsp;   <i>{{user.userId.email}}</i></p>
                        <ol>
                            {{#each notebooks}}

                                <p>Ordered : &nbsp;&nbsp;&nbsp;<li>
                                <i>{{notebook.title}} (x <b>{{count}}</b>)</i> </p>
                                </li>
                            {{/each}}
                        </ol>
                    </div>
                    <div class="card-action">
                        <p>Price : <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <div class="mt-100">
        <div class="row bascket">
            <div class="col-md-12">
                <div class="card bascket">
                    <div class="card-body cart">
                        <div class="col-sm-12 empty-cart-cls text-center">
                            <img
                                    src="https://i.imgur.com/dCdflKN.png"
                                    width="130"
                                    height="130"
                                    class="img-fluid mb-4 mr-3"
                            />
                            <h3><strong>Your Order is Empty</strong></h3>
                            <h4>Order something to make me happy :)</h4>
                            <a
                                    href="/notebooks"
                                    class="btn btn-primary cart-btn-transform m-3"
                                    data-abc="true"
                            >continue shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}